<div class="container">
  <div class="row offset-1 my-5">
    <h2 class="px-3 text-center bg-info">缶詰一覧</h2>
    
    <div class="search_form offset-1 d-flex align-items-center">
      <%= form_with url: admin_canned_foods_search_path, local: true, method: :get do |f| %>
        <div class="d-flex align-items-center justify-content-center">
        <%= f.text_field :word, placeholder:"缶詰名", class:"mr-2" %>
        <%= f.submit "検索", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h2 class="text-right">
        <%= link_to new_admin_canned_food_path do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </h2>
    </div>
  </div>
    
  <div class="row">
    <div class="col">
      <table class="table text-center">
        <thead class="bg-info">
          <tr>
            <th class="font-weight-bold border border-dark">缶詰ID</th>
            <th class="font-weight-bold border border-dark">缶詰名</th>
            <th class="font-weight-bold border border-dark">缶詰画像</th>
            <th class="font-weight-bold border border-dark">缶詰タグ</th>
            <th class="font-weight-bold border border-dark">表示ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @canned_foods.each do |canned_food| %>
            <tr>
              <td class="border border-dark"><%= canned_food.id %></td>
              <td class="border border-dark">
                <%= link_to admin_canned_food_path(canned_food.id) do %>
                  <%= canned_food.canned_name %>
                <% end %>
              </td>
              <td class="border border-dark"><%= image_tag canned_food.get_image(100,50), class: "image" %></td>
              <td class="border border-dark">
                <% canned_food.tags.each do |tag| %>
                  <%= tag.name %>
                <% end %>
              </td>
              <td class="border border-dark">
                <% if canned_food.is_canned_status == true %>
                  <strong class="text-success"><%= "表示" %></strong>
                <% else %>
                  <strong class="text-danger"><%= "非表示" %></strong>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="mx-auto my-2">
      <%= paginate @canned_foods %>
    </div>
  </div>
</div>