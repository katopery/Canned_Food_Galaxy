<div class="container">
  <div class="row offset-1 my-5">
    <h2 class="px-3 text-center bg-info">缶詰一覧</h2>
    
    <div class="search_form offset-1 d-flex align-items-center">
      <%= render "admin/searches/form", word: "缶詰名", range: "缶詰"  %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h2 class="text-right">
        <%= link_to new_admin_canned_food_path do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </h2>
    </div>
  </div>
    
  <div class="row">
    <div class="col">
      <%= render "admin/canned_foods/list.html.erb", canned_foods: @canned_foods %>
    </div>
  </div>
  
  <div class="row">
    <div class="mx-auto my-2">
      <%= paginate @canned_foods %>
    </div>
  </div>
</div>