<div class="container">
  <div class="row my-5">
    <h2 class="px-3 text-center">
      <%= @member.nickname %>さんのレビュー一覧
    </h2>
  </div>
  
  <div class="row my-4 text-center justify-content-center">
    <div class="col-lg-3 col-md-12 mb-3">
      <%= link_to admin_member_path(@member) do %>
        <%= image_tag @member.get_profile_image(100,100), class: "image" %><br>
        <%= @member.nickname %>  
      <% end %> 
    </div>
    <div class="col-lg-2 col-md-12 mb-3 justify-content-center d-flex align-items-center">
      レビュー数： <%= @member.reviews.count %>
    </div>
  </div>
    
  <% @reviews.each do |review| %>
    <div class="row my-3 justify-content-center">
      <div class="col-lg-3 col-md-12 p-3 text-center canned-food-box">
        <%= image_tag review.canned_food.get_image(200,100), class: "image" %><br>
        <%= review.canned_food.canned_name %>
      </div>
      <div class="col-lg-9 col-md-12 d-flex align-items-center justify-content-center canned-food-box">
        <div class="row">
          <div class="col-lg-3 col-md-12 my-2 text-center">
            賞味期限
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'expiry_date_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            おいしさ
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'taste_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            おつまみ
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'snack_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            アウトドア
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'outdoor_rating' %>
          </div>
          <div class="col-12 my-3 text-center">
            <div class="text-center mb-2">コメント数： <%= review.comments.count %></div>
            <div>
              <%= link_to "レビュー詳細", admin_review_comments_path(review.id), class: "btn primary_button" %>
              <%= link_to "レビュー削除", admin_review_path(review.id), method: :delete, class: 'btn danger_button' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="mx-auto my-5">
      <%= paginate @reviews %>
    </div>
  </div>
</div>