<div class="container">
  <div class="row my-5">
    <h2 class="px-3 text-center">レビュー一覧</h2>
  </div>
  
  <div class="row my-5 justify-content-center">
    <div class="col-lg-3 col-md-12 text-center">
      <%= link_to admin_canned_food_path(@canned_food.id) do %>
        <div>
          <%= image_tag @canned_food.get_image(200,100), class: "image" %>
        </div>
        <div>
          缶詰名： <%= @canned_food.canned_name %>
        </div>
      <% end %>
      <div>
        <% @tags.each do |tag| %>
          タグ： <%= tag.name %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6 col-md-12 border border-primary text-break overflow-auto description-box">
      <%=safe_join(@canned_food.description.split("\n"),tag(:br))%>
    </div>
  </div>
  
  <% @reviews.each do |review| %>
    <div class="row my-3 justify-content-center">
      <div class="col-lg-3 col-md-12 p-3 text-center canned-food-box">
        <%= link_to admin_member_path(review.member) do %>
          <%= image_tag review.member.get_profile_image(100,100), class: "image" %><br>
          <%= review.member.nickname %>
        <% end %>  
      </div>
      <div class="col-lg-9 col-md-12 d-flex align-items-center justify-content-center canned-food-box">
        <div class="row">
          <%= render "display", review: review %>
          <div class="col-12 text-center">
            <%= render "admin/comments/count", comment: review.comments %>
          </div>
          <div class="col-12 my-3 text-center">
            <%= link_to "レビュー詳細", admin_review_comments_path(review.id), class: "btn primary-button" %>
            <%= link_to "レビュー削除", admin_review_path(review.id), method: :delete, class: 'btn danger-button' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="mx-auto my-5">
      <%= paginate @reviews %>
    </div>
  </div>
</div>