<% if current_member != member %>
  <% if current_member.following?(member) %>
    <%= link_to "フォロー外す", member_relationships_path(member.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", member_relationships_path(member.id), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>