<div class="container">
  <div class="row my-5">
    <h2 class="px-3 text-center">レビュー一覧</h2>
  </div>
  
  <div class="row my-5 justify-content-center">
    <div class="col-lg-3 col-md-12 text-center">
      <%= link_to canned_food_path(@canned_food) do %>
        <div>
          <%= image_tag @canned_food.get_image(200,100), class: "image" %>
        </div>
        <div>
          缶詰名： <%= @canned_food.canned_name %>
        </div>
      <% end %>
      <div>
        <% @tags.each do |tag| %>
          タグ： <%= tag.name %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6 col-md-12 border border-primary text-break overflow-auto" style="height: 200px">
      <%=safe_join(@canned_food.description.split("\n"),tag(:br))%>
    </div>
    
    <% if !@member.guest_member? %>
      <div class="col-lg-3 col-md-12 my-3 justify-content-center">
        <%= render "/public/favorites/btn", canned_food: @canned_food %>
      </div>
    <% end %>
  </div>
  
  <% @reviews.each do |review| %>
    <div class="row my-3 justify-content-center">
      <div class="col-lg-3 col-md-12 p-3 text-center canned-food-box">
        <%= link_to member_path(review.member) do %>
          <%= image_tag review.member.get_profile_image(100,100), class: "image" %><br>
          <%= review.member.nickname %>
        <% end %>  
      </div>
      <div class="col-lg-9 col-md-12 d-flex align-items-center justify-content-center canned-food-box">
        <div class="row">
          <div class="col-lg-3 col-md-12 my-2 text-center">
            賞味期限
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'expiry_date_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            おいしさ
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'taste_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            おつまみ
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'snack_rating' %>
          </div>
          <div class="col-lg-3 col-md-12 my-2 text-center">
            アウトドア
            <%= render "admin/reviews/rate_read_only.html.erb", review: review, type: 'outdoor_rating' %>
          </div>
          <div class="col-12 my-3 text-center">
            <div class="text-center mb-2">コメント数： <%= review.comments.count %></div>
            <div>
              <%= link_to "レビュー詳細", review_comments_path(review.id), class: "btn primary_button" %>
              <% if review.member == current_member %>
                <%= link_to "レビュー削除", review_path(review.id), method: :delete, class: 'btn danger_button' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>