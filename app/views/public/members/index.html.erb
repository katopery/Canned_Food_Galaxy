<div class="container">
  <div class="row offset-1 my-5">
    <h2 class="px-3 text-center bg-info">マイページ</h2>
  </div>
  
  <div class="row offset-2 my-3">
    <div class="mr-5 d-flex align-items-center">
      <h4 class="px-3 text-center bg-info">登録情報</h4>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to "編集する", members_information_edit_path, class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row my-5 justify-content-center">
    <div class="col-3 text-center">
      <% if @member.image.attached? %>
        <%= image_tag @member.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <p>
        ニックネーム</br>
        <%= @member.nickname %>
      </p>
    </div>
    
    <table class="table table-bordered col-7 text-center">
      <tbody>
        <tr>
          <td class="col-4 bg-secondary align-middle">
            電話番号
          </td>
          <td class="align-middle">
            <%= @member.phone_number %>
          </td>
        </tr>
        
        <tr>
          <td class="col-4 bg-secondary align-middle">
            メールアドレス
          </td>
          <td class="align-middle">
            <%= @member.email %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="row mt-5 justify-content-center">
    <div>
      <%= link_to "レビュー 一覧", "/members/#{current_member.id}/reviews", class: "btn btn-primary px-4 py-2" %>
    </div>
    
    <div class="offset-1">
      <%= link_to "フォロー 一覧", members_followers_path, class: "btn btn-primary px-4 py-2" %>
    </div>

    <div class="offset-1">
      <%= link_to "お気に入り 一覧", favorites_path, class: "btn btn-primary px-4 py-2" %>
    </div>
  </div>
</div>