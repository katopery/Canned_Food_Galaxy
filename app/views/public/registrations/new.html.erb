<div class="container">
  <div class="row offset-2 my-5">
    <h2 class="px-3 text-center bg-info">新規会員登録</h2>
  </div>

  <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-5 justify-content-center">
      <div class="field form-group">
        <%= f.label :"👤ニックネーム" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "カンヅメ" %>
      </div>
    </div>
    
    <div class="row my-2 justify-content-center">
      <div class= "field form-group">
        <%= f.label :"📧メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size: 40 %>
      </div>
    </div>
    
    <div class="row my-2 justify-content-center">
      <div class= "field form-group">
        <%= f.label :"📞電話番号(ハイフンなし)" %>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "00000000000" %>
      </div>
    </div>
  
    <div class="row my-2 justify-content-center">
      <div class= "field form-group">
        <%= f.label :"🔒パスワード" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
  
    <div class="row my-2 justify-content-center">
      <div class= "field form-group">
        <%= f.label :"🔒パスワード（確認用）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
      
    <div class="row my-2 justify-content-center">
      <div class="actions">
        <%= f.submit "新規会員登録", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row my-5 justify-content-center">
    <h5 class= "mr-2 p-2 text-center bg-secondary">既に登録済みの方</h5>
    <h6 class="d-flex align-items-center">
      <%= link_to "こちら", new_member_session_path %> からログインしてください。
    </h6>
  </div>
</div>